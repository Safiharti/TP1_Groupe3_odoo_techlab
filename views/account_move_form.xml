<odoo>
    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter le responsable de facture après le vendeur -->
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="is_waiting_responsible" readonly="1"/>
                <field name="responsible_id" readonly="1" string="Responsable de Facture"/>
            </xpath>

            <!-- Ajouter le montant total en lettres dans une nouvelle section -->
            <xpath expr="//sheet" position="inside">
                <group string="Informations supplémentaires" colspan="4">
                    <field name="amount_total_in_words" readonly="1"/>
                    <field name="max_amount_threshold"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
