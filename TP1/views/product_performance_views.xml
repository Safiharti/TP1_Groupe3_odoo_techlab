<odoo>
    <record id="view_product_performance_form" model="ir.ui.view">
        <field name="name">product.performance.form</field>
        <field name="model">product.performance</field>
        <field name="arch" type="xml">
            <form string="Product Performance">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="total_sales" readonly="1"/>
                        <!-- Ajoutez d'autres champs ici si nécessaire -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_performance_tree" model="ir.ui.view">
        <field name="name">product.performance.tree</field>
        <field name="model">product.performance</field>
        <field name="arch" type="xml">
            <tree string="Product Performance">
                <field name="product_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_sales"/>
                <!-- Ajoutez d'autres champs ici si nécessaire -->
            </tree>
        </field>
    </record>

</odoo>
