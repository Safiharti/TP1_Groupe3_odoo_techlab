<odoo>
    <!-- Liste des clients et leur fidélité -->
    <record id="view_customer_loyalty_tree" model="ir.ui.view">
        <field name="name">customer.loyalty.tree</field>
        <field name="model">customer.loyalty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="total_orders"/>
                <field name="average_spent"/>
            </tree>
        </field>
    </record>

    <!-- Formulaire de fidélité client -->
    <record id="view_customer_loyalty_form" model="ir.ui.view">
        <field name="name">customer.loyalty.form</field>
        <field name="model">customer.loyalty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="total_orders"/>
                        <field name="average_spent"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
