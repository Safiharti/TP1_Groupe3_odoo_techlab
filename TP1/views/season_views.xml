<odoo>
    <record id="view_season_tree" model="ir.ui.view">
        <field name="name">sale.season.tree</field>
        <field name="model">sale.season</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="view_season_form" model="ir.ui.view">
        <field name="name">sale.season.form</field>
        <field name="model">sale.season</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <notebook>
                        <page string="Sales Orders">
                            <field name="sale_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_order"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
